{
  "compilerOptions": {
   
    
    "target": "es2017",                                
    
    "module": "commonjs",                                
      "esModuleInterop": true,                            
                          
    "forceConsistentCasingInFileNames": true,            

    "strict": true,                                     
    "skipLibCheck": true , 
    "jsx": "react",
    "types": ["jest", "node"],
    "sourceMap": false,
     // or 'es2019', 'es2020', etc.
    "lib": ["dom", "es2017"],
   "resolveJsonModule": true, // If you need to import JSON files in tests
 "isolatedModules": true

                                 
  }
}
